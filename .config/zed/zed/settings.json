{
    "show_edit_predictions": false,
    "buffer_line_height": "comfortable",
    "buffer_font_family": "JetBrains Mono",
    "colorize_brackets": true,
    "search": {
        "regex": true
    },
    "ssh_connections": [
        {
            "host": "localhost",
            "args": [],
            "projects": []
        }
    ],
    "terminal": {
        "dock": "right",
        "blinking": "on",
        "cursor_shape": "underline",
        "font_weight": 400.0,
        "default_height": 290.0,
        "minimum_contrast": 44.0,
        "toolbar": {
            "breadcrumbs": true
        },
        "default_width": 630.0,
        "font_size": 16.0,
        "copy_on_select": true
    },
    "icon_theme": "JetBrains New UI Icons (Dark)",
    "ui_font_size": 16,
    "buffer_font_size": 16.0,
    "disable_ai": true,
    "theme": "Monokai Vibrant Rust",
    "vim_mode": false,
    "format_on_save": "on",
    "buffer_font_features": {
        "calt": true,
        "liga": true
    },
    "cursor_blink": true,
    "show_whitespaces": "selection",
    "show_wrap_guides": false,
    "remove_trailing_whitespace_on_save": true,
    "ensure_final_newline_on_save": true,
    "show_completions_on_input": true,
    "git": {
        "inline_blame": {
            "enabled": true
        }
    },
    "inlay_hints": {
        "enabled": false,
        "show_type_hints": true,
        "show_parameter_hints": true,
        "show_other_hints": true
    },
    "outline_panel": {
        "dock": "left"
    },
    "project_panel": {
        "dock": "left",
        "default_width": 240
    },
    "collaboration_panel": {
        "dock": "left"
    },
    "notification_panel": {
        "dock": "right"
    },
    "preview_tabs": {
        "enabled": false
    },
    "tab_bar": {
        "show": true
    },
    "scrollbar": {
        "show": "always"
    },
    "gutter": {
        "line_numbers": true,
        "folds": true
    },
    "wrap_guides": [80, 120],
    "soft_wrap": "none",
    "preferred_line_length": 80,
    "hard_tabs": false,
    "tab_size": 4,
    "indent_guides": {
        "enabled": true,
        "line_width": 1,
        "active_line_width": 1,
        "coloring": "indent_aware"
    },
    "toolbar": {
        "breadcrumbs": true,
        "quick_actions": true
    },
    "scroll_sensitivity": 3.0,
    "vertical_scroll_margin": 3,
    "horizontal_scroll_margin": 3,
    "auto_update": true,
    "auto_install_extensions": {
        "git": true
    },
    "file_types": {
        "Dockerfile": ["Dockerfile*"],
        "JSON": ["*.json", "*.jsonc"],
        "YAML": ["*.yaml", "*.yml"]
    },
    "file_scan_exclusions": [
        "**/.git",
        "**/.svn",
        "**/.hg",
        "**/compile*.json",
        "**/CVS",
        "**/.DS_Store",
        "**/Thumbs.db",
        "**/.classpath",
        "**/.settings",
        "**/.cache",
        "**/node_modules",
        "**/__pycache__",
        "**/*.pyc",
        "**/*.pyo",
        "**/*.rlib",
        "**/*.rmeta",
        "**/*.so",
        "**/*.dll",
        "**/*.dylib",
        "**/target/debug",
        "**/target/release",
        "**/.vscode/extensions",
        "**/*.d"
    ],
    "lsp": {
        "clangd": {
            "binary": {
                "path": "/usr/bin/clangd",
                "arguments": [
                    "--background-index",
                    "--completion-style=detailed",
                    "--header-insertion=never",
                    "--pch-storage=memory"
                ]
            }
        },
        "rust-analyzer": {
            "initialization_options": {
                "checkOnSave": true,
                "completion": {
                    "callable": {
                        "snippets": "none"
                    },
                    "addSemicolonToUnit": false
                },
                "inlayHints": {
                    "maxLength": 5,
                    "lifetimeElisionHints": {
                        "enable": "skip_trivial"
                    },
                    "genericParameterHints": {
                        "lifetime": {
                            "enable": true
                        }
                    }
                }
            }
        }
    },
    "languages": {
        "Rust": {
            "format_on_save": "on",
            "formatter": "language_server",
            "preferred_line_length": 100,
            "hard_tabs": false,
            "tab_size": 4
        },
        "Python": {
            "format_on_save": "on",
            "formatter": {
                "external": {
                    "command": "ruff",
                    "arguments": [
                        "format",
                        "--stdin-filename",
                        "{buffer_path}",
                        "-"
                    ]
                }
            },
            "preferred_line_length": 88,
            "hard_tabs": false,
            "tab_size": 4
        },
        "C": {
            "format_on_save": "on",
            "formatter": "language_server",
            "preferred_line_length": 80,
            "hard_tabs": false,
            "tab_size": 2
        },
        "C++": {
            "format_on_save": "on",
            "formatter": "language_server",
            "preferred_line_length": 80,
            "hard_tabs": false,
            "tab_size": 2
        },
        "JavaScript": {
            "format_on_save": "on",
            "preferred_line_length": 80,
            "hard_tabs": false,
            "tab_size": 2
        },
        "TypeScript": {
            "format_on_save": "on",
            "preferred_line_length": 80,
            "hard_tabs": false,
            "tab_size": 2
        },
        "JSON": {
            "format_on_save": "on",
            "hard_tabs": false,
            "tab_size": 2
        },
        "YAML": {
            "format_on_save": "on",
            "hard_tabs": false,
            "tab_size": 2
        },
        "Markdown": {
            "format_on_save": "off",
            "hard_tabs": false,
            "tab_size": 2,
            "soft_wrap": "preferred_line_length"
        },
        "Go": {
            "format_on_save": "on",
            "formatter": "language_server",
            "hard_tabs": true,
            "tab_size": 8
        }
    }
}
