
## MEANT to be used on only bash/zsh

#shellcheck disable=2148
mysh() {
    ps -p $$ -o comm= | awk -F/ '{print $NF}' | sed 's/^-//'
}

CFG() {
    "$EDITOR" "$HOME/.$(mysh)rc"
}

REFRESH() {
    # shellcheck disable=SC1090
  source "$HOME/.$(mysh)rc"
}

alias pacman='pacman --noconfirm'
alias paru='paru --noconfirm'
unalias lsgrep > /dev/null 2>&1



unalias gitclone > /dev/null 2>&1

gitclone() {
  git clone "git@github.com:$1.git"
}

unalias exportpath > /dev/null 2>&1

alias SSH='ssh -p 2222 alexc@localhost'

unalias SSHCOPY > /dev/null 2>&1
SSHCOPY(){
  #scp -r -P 2222 /tmp/fdf_test alexc@localhost:/tmp/fdf_test
  scp -r -P 2222 "$1" alexc@localhost:"$2"
}

unalias RSYNC > /dev/null 2>&1
RSYNC(){
  rsync -avz -e 'ssh -p 2222' "$1" alexc@localhost:"$2"
}

exportpath () {
  echo "export PATH=\$PATH:$1" >> ~/.shell_functions
}


